---
// Import type utility for the markdown layout props
import type { MarkdownLayoutProps } from "astro";
// Import the base layout: Main.astro
import Main from './main.astro'

// Define the props type
type Props = MarkdownLayoutProps<{
    title: string;
    poster: string;
    subtitle: string;
}>

// Get properties from the markdown frontmatter
const { title, poster, subtitle } = Astro.props.frontmatter;
---

<Main title = "Frau Katarina | Blog">
    <figure class="figure">
        <img src={poster} alt="" width="100%" height="480px" class="figure__image" />
        <figcaption class="figure__caption">
            Poster image for {title.toLowerCase()}
        </figcaption>
    </figure>

    <h1>{title}</h1>
    <h2>{subtitle}</h2>

    <slot />
</Main>

<style>
    h1 + h2 {
        margin-bottom: 3rem;
    }
    
    .figure {
        margin: 0;
    }
    
    .figure__image {
        max-width: 100%;
        border-radius: 10px;
    }

    .figure__caption {
        font-size: 0.9rem;
    }
</style>